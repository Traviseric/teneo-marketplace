# Advanced Bookstore Configuration
# Full-featured setup with all capabilities

# Server Configuration
PORT=3001
NODE_ENV=production
CLUSTER_WORKERS=4

# Database (PostgreSQL required for advanced features)
DATABASE_TYPE=postgres
DATABASE_URL=postgresql://user:pass@localhost:5432/bookstore
DATABASE_POOL_SIZE=20
DATABASE_SSL=true

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Session Management
SESSION_SECRET=your-very-long-random-session-secret
SESSION_STORE=redis

# Branding
MARKETPLACE_NAME=Premium Book Market
MARKETPLACE_TAGLINE=Discover Amazing Books from Independent Authors
MARKETPLACE_LOGO=/assets/logo.svg
PRIMARY_COLOR=#4F46E5
SECONDARY_COLOR=#7C3AED

# Contact Information
SUPPORT_EMAIL=support@premiumbookmarket.com
CONTACT_EMAIL=hello@premiumbookmarket.com
BUSINESS_ADDRESS=123 Book Street, Reading, CA 90210

# Social Media
SOCIAL_TWITTER=@premiumbookmarket
SOCIAL_FACEBOOK=premiumbookmarket
SOCIAL_INSTAGRAM=premiumbookmarket

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_TAX_ENABLED=true
CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD,AUD

# Email Configuration (SendGrid)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG....
EMAIL_FROM_NAME=Premium Book Market
EMAIL_FROM_ADDRESS=noreply@premiumbookmarket.com
EMAIL_TEMPLATE_PURCHASE=d-abc123
EMAIL_TEMPLATE_WELCOME=d-def456
EMAIL_TEMPLATE_DIGEST=d-ghi789

# Storage Configuration (AWS S3)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
AWS_BUCKET_BOOKS=bookmarket-books
AWS_BUCKET_COVERS=bookmarket-covers
AWS_BUCKET_PREVIEWS=bookmarket-previews

# CDN Configuration
CDN_ENABLED=true
CDN_URL=https://cdn.premiumbookmarket.com
CLOUDFRONT_DISTRIBUTION_ID=E1234567890ABC

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=XXXXXXXXXXXXXXX
MIXPANEL_TOKEN=...
CUSTOM_ANALYTICS_ENDPOINT=https://analytics.premiumbookmarket.com

# Federation Network
FEDERATION_ENABLED=true
FEDERATION_API_KEY=fed_live_...
FEDERATION_STORE_ID=premium-book-market
FEDERATION_HUB_URL=https://federation.bookmarketplace.network
FEDERATION_SHARE_CATALOG=true
FEDERATION_ACCEPT_NETWORK=true
FEDERATION_COMMISSION_RATE=0.10

# Security
TWO_FACTOR_ENABLED=true
IP_WHITELIST=
RATE_LIMIT_API=1000
RATE_LIMIT_DOWNLOADS=100
SECURITY_HEADERS=strict

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,pt,ja
AUTO_TRANSLATE=true
GOOGLE_TRANSLATE_API_KEY=...

# Advanced Features
API_ENABLED=true
API_RATE_LIMIT=10000
WEBHOOKS_ENABLED=true
CUSTOM_DOMAINS_ENABLED=true
WHITE_LABEL_ENABLED=true
BULK_OPERATIONS_ENABLED=true
PRE_ORDERS_ENABLED=true

# Monitoring
SENTRY_DSN=https://...@sentry.io/...
NEW_RELIC_LICENSE_KEY=...
LOG_LEVEL=info
LOG_AGGREGATOR=elk

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=bookmarket-backups

# Feature Flags
ENABLE_REVIEWS=true
ENABLE_WISHLISTS=true
ENABLE_AUTHOR_PROFILES=true
ENABLE_BUNDLES=true
ENABLE_DISCOUNTS=true
ENABLE_AFFILIATES=true
ENABLE_ADVANCED_SEARCH=true
ENABLE_RECOMMENDATIONS=true
ENABLE_SOCIAL_SHARING=true

# Performance
ENABLE_SERVICE_WORKER=true
ENABLE_PWA=true
IMAGE_OPTIMIZATION=true
LAZY_LOADING=true
PREFETCH_ENABLED=true