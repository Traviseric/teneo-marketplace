# Network Store Configuration
# Optimized for federation participation

# Server
PORT=3001
NODE_ENV=production

# Branding
MARKETPLACE_NAME=Connected Books Hub
MARKETPLACE_TAGLINE=Your gateway to the book network
NETWORK_BADGE=true

# Database (PostgreSQL recommended for network features)
DATABASE_TYPE=postgres
DATABASE_URL=postgresql://user:pass@localhost:5432/networkstore

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
CURRENCY=USD

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=network@connectedbooks.com
EMAIL_PASS=your-app-password

# Federation Network (Required)
FEDERATION_ENABLED=true
FEDERATION_API_KEY=fed_live_request_from_network
FEDERATION_STORE_ID=connected-books-hub
FEDERATION_HUB_URL=https://federation.bookmarketplace.network

# Network Settings
FEDERATION_SHARE_CATALOG=true
FEDERATION_SHARE_PERCENTAGE=100
FEDERATION_ACCEPT_NETWORK=true
FEDERATION_DISPLAY_NETWORK=true
FEDERATION_COMMISSION_RATE=0.10
FEDERATION_AUTO_SYNC=true
FEDERATION_SYNC_INTERVAL=3600

# Network Features
NETWORK_UNIFIED_SEARCH=true
NETWORK_RECOMMENDATIONS=true
NETWORK_PARTNER_SHOWCASE=true
NETWORK_COMMISSION_DASHBOARD=true
NETWORK_REFERRAL_ANALYTICS=true
NETWORK_LEADERBOARD=true

# Discovery Settings
NETWORK_BOOKS_ON_HOMEPAGE=true
MIXED_SEARCH_RESULTS=true
SHOW_NETWORK_BADGES=true
SHOW_PARTNER_LINKS=true

# Performance
CACHE_NETWORK_CATALOG=true
CACHE_TTL=1800
PREFETCH_POPULAR=true

# Analytics
TRACK_NETWORK_CONVERSIONS=true
TRACK_REFERRAL_SOURCES=true
ANALYTICS_SHARE_WITH_NETWORK=true

# Advanced Network Features
BULK_IMPORT_ENABLED=true
CROSS_PROMOTION_ENABLED=true
RECIPROCAL_FEATURING=true
NETWORK_QUALITY_FILTER=medium